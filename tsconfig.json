{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node16",
        "declaration": true,
        "sourceMap": true
    },
    "references": [
        { "path": "./packages/core" },
        { "path": "./packages/file" },
        { "path": "./packages/dynamo-db" },
        { "path": "./packages/pg" }
    ],
    "exclude": ["**"]
}
